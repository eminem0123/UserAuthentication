<%-include("include/header")%>
<div class="container reg-page">
<%if(locals.errors){%>
	<%errors.forEach(function(error){%>
		<div class="alert alert-danger"><%=error.msg%></div>
	<%})%>
<%}%>
  <form class="form-signin" method="post" action="/users/register">
  <h1 class="h3 mb-3 font-weight-normal text-center">User Registration</h1>
  <label for="Name" class="sr-only">Name</label>
  <input type="text" name="name" class="form-control" placeholder="Name" value ="<%=(!!locals.name)?name:''%>" required autofocus>
  <br>
  <label for="Username" class="sr-only">Username</label>
  <input type="text" name="username" class="form-control" placeholder="Username" value ="<%=(!!locals.username)?username:''%>" required autofocus>
  <br>
  <label for="Email" class="sr-only">Email</label>
  <input type="email" name="email" class="form-control" placeholder="Email" value ="<%=(!!locals.email)?email:''%>" required autofocus>
  <br>
  <label for="Password" class="sr-only">Password</label>
  <input type="password" name="password" class="form-control" placeholder="Password" value ="<%=(!!locals.password)?password:''%>" required>
  <br>
  <label for="Password2" class="sr-only">Confirm Password</label>
  <input type="password" name="password2" class="form-control" placeholder="Confirm Password" value ="<%=(!!locals.password2)?password2:''%>" required>
   <p>Have Account? <a href="/users/login">Login</a></p>
   <button class="btn btn-lg btn-primary btn-block" type="submit">Sign up</button>
  <p class="mt-5 mb-3 text-muted">&copy; 2019-2020</p>
</form>
</div>
<%-include("include/footer")%>